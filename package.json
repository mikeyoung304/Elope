{
  "name": "elope",
  "version": "0.0.0",
  "private": true,
  "description": "Modular monolith workspace",
  "scripts": {
    "doctor": "tsx apps/api/scripts/doctor.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test:e2e": "playwright test -c e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test -c e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test -c e2e/playwright.config.ts --headed",
    "dev:all": "pnpm exec concurrently -n api,web,stripe -c cyan,magenta,yellow \"pnpm -C apps/api run dev:real\" \"pnpm -C apps/web run dev\" \"stripe listen --forward-to localhost:3001/v1/webhooks/stripe\"",
    "dev:all:real": "pnpm run dev:all"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "puppeteer": "^24.24.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@ts-rest/core": "^3.52.1"
  }
}
