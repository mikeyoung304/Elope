{
  "name": "@macon/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Macon AI Solutions API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "doctor": "tsx scripts/doctor.ts",
    "dev": "tsx watch src/index.ts",
    "dev:mock": "cross-env ADAPTERS_PRESET=mock tsx watch src/index.ts",
    "dev:real": "cross-env ADAPTERS_PRESET=real tsx watch src/index.ts",
    "build": "tsc -b",
    "start": "node dist/index.js",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest run --reporter=verbose",
    "test:watch": "vitest",
    "test:integration": "DATABASE_URL=$DATABASE_URL_TEST vitest run test/integration/ --no-coverage",
    "test:integration:watch": "DATABASE_URL=$DATABASE_URL_TEST vitest watch test/integration/",
    "coverage": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:coverage:unit": "vitest run --coverage test/ --exclude=\"test/integration/**\"",
    "test:coverage:report": "open coverage/index.html",
    "prisma:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name initial_schema",
    "db:seed": "tsx prisma/seed.ts",
    "create-tenant": "tsx scripts/create-tenant.ts",
    "create-tenant-with-stripe": "tsx scripts/create-tenant-with-stripe.ts",
    "test:commission": "tsx scripts/test-commission.ts",
    "test:stripe-connect": "tsx scripts/test-stripe-connect.ts"
  },
  "dependencies": {
    "@macon/contracts": "*",
    "@macon/shared": "*",
    "@prisma/client": "^6.17.1",
    "@sentry/node": "^10.25.0",
    "@sentry/profiling-node": "^10.26.0",
    "@supabase/supabase-js": "^2.84.0",
    "@ts-rest/express": "^3.52.1",
    "@ts-rest/open-api": "^3.52.1",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "pino": "^10.0.0",
    "prisma": "^6.17.1",
    "prom-client": "^15.1.3",
    "stripe": "^19.1.0",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.23",
    "xss": "^1.0.15",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.15.10",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "openapi-types": "^12.1.3",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
